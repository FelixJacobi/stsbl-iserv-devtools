#!/bin/bash -ex

export LC_ALL=C

pkgID=$(basename $PWD | sed -e 's/winst-//g')

if [ -e "/srv/deploy/install/$pkgID/" ]
then
  cp -v "/srv/deploy/install/$pkgID/"{*.*,control} winst/
fi

if [ -e "/srv/deploy/install/$pkgID/data/" ]
then
  cp -rv "/srv/deploy/install/$pkgID/data/*" data/
fi

if [ -e "data/*" ]
then
  for i in data/*
  do
    if ! [ -e "/srv/deploy/install/$pkgID/data/$(basename $i)" ]
    then
      rm -f "$i"
    fi
  done
fi
